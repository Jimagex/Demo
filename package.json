{
  "name": "@root/koishi",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "docs",
    "test",
    "external/*",
    "external/console/packages/*",
    "external/dialogue/packages/*",
    "external/minato/packages/*",
    "external/satori/packages/*",
    "external/yakumo/packages/*",
    ".yalc/*",
    ".yalc/@*/*",
    "packages/*",
    "plugins/a11y/*",
    "plugins/adapter/*",
    "plugins/assets/*",
    "plugins/cache/*",
    "plugins/common/*",
    "plugins/database/*",
    "plugins/*"
  ],
  "scripts": {
    "docs": "yarn workspace @koishijs/docs",
    "console": "yarn workspace @root/console",
    "dialogue": "yarn workspace @root/dialogue",
    "minato": "yarn workspace @root/minato",
    "satori": "yarn workspace @root/satori",
    "yakumo": "yarn workspace @root/yakumo",
    "clean": "node -r esbuild-register build/clean",
    "compile": "yakumo esbuild",
    "build": "yakumo esbuild && yakumo tsc",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages plugins --ext=ts --cache",
    "test": "yakumo mocha -r esbuild-register -r yml-register",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "scaffold": "shx rm -rf test && shx cp -rf build/template/ test/ && yarn",
    "start": "yarn compile cli && yarn workspace test dev",
    "shiki": "yarn workspace bot-shiki"
  },
  "license": "MIT",
  "devDependencies": {
    "@octokit/rest": "^18.12.0",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.4",
    "@types/semver": "^7.3.10",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "@types/source-map-support": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "c8": "^7.12.0",
    "cac": "^6.7.12",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.51",
    "esbuild-register": "^3.3.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "globby": "^11.1.0",
    "jest-mock": "^28.1.3",
    "kleur": "^4.1.5",
    "latest-version": "^5.1.0",
    "mocha": "^9.2.2",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "semver": "^7.3.7",
    "shx": "^0.3.4",
    "source-map-support": "^0.5.21",
    "typescript": "4.8.2",
    "yakumo": "^0.3.6",
    "yakumo-esbuild": "^0.3.17",
    "yakumo-esbuild-yaml": "^0.3.1",
    "yakumo-mocha": "^0.3.0",
    "yakumo-publish": "^0.3.0",
    "yakumo-publish-sync": "^0.3.1",
    "yakumo-tsc": "^0.3.5",
    "yakumo-upgrade": "^0.3.2",
    "yakumo-version": "^0.3.1",
    "yml-register": "^1.1.0"
  }
}
